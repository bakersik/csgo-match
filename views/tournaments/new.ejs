<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Tournament</h1>
        <div class="col-6 offset-3">
            <form action="/tournaments" method="POST" class="validated-form" novalidate">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="tournament[name]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="tournament[description]"
                        required></textarea>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="start_at">Start date:</label>
                    <input class="form-control" type="datetime-local" id="start_at" name="tournament[start_at]"
                        required>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="prize">Prize:</label>
                    <input class="form-control" type="text" id="prize" name="tournament[prize]" required>
                </div>
                <button class="btn col-12 btn-success">Add Tournament</button>
            </form>
            <a class="btn btn-info col-12 mt-3" href="/tournaments">Back to tournaments</a>
        </div>
    </div>