<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class=" card-body">
                    <h5 class="card-title">
                        <%= tournament.name %>
                    </h5>
                    <p class="card-text">
                        <%= tournament.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Starting on
                        <%= tournament.start_at.toLocaleDateString() %>, at <%= tournament.start_at.toLocaleTimeString()
                                %>
                    </li>
                    <li class="list-group-item">
                        Prize: <%= tournament.prize %>
                    </li>
                    <li class="list-group-item">
                        Owner: <%= tournament.owner.username %>
                    </li>
                </ul>
                <% if( currentUser && tournament.owner.equals(currentUser._id)) {%>
                    <div class="card-body">
                        <a class="card-link btn btn-primary" href="/tournaments/<%= tournament._id %>/edit">Edit</a>
                        <form class="d-inline" action="/tournaments/<%= tournament._id %>?_method=DELETE" method="POST">
                            <button class=" btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            <a href="/tournaments">All Tournaments</a>
                        </div>
            </div>
        </div>
        <div class="col-6">
            <a href="/tournaments/<%= tournament._id %>/teams" class="btn btn-primary">View teams</a>
        </div>


    </div>