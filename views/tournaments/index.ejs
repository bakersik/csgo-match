<% layout('layouts/boilerplate') %>
    <h1 class="m-5">All Tournaments</h1>
    <div>
        <a class="m-5" href="/tournaments/new">Add Tournament</a>
    </div>
    <% for(let tournament of tournaments) {%>
        <div class="card m-5">
            <div class="card-body">
                <h5 class="card-title">
                    <%= tournament.name %>
                </h5>
                <p class="card-text">
                    <%= tournament.description %>
                </p>
                <a href="/tournaments/<%= tournament._id %>" class="btn btn-primary">View details</a>
            </div>
        </div>
        <% } %>