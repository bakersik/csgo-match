<% layout('layouts/boilerplate') %>
    <div class="text-center">
        <h1 class="m-5">All Tournaments</h1>
        <a class="btn btn-success" href="/tournaments/new">New Tournament</a>
    </div>


    <% for(let tournament of tournaments) {%>
        <div class="card m-5">
            <div class="card-body">
                <h5 class="card-title">
                    <%= tournament.name %>
                </h5>
                <p class="card-text">
                    Begins
                    <%= tournament.start_at.toLocaleDateString() %>, at <%= tournament.start_at.toLocaleTimeString() %>
                </p>
                <a href="/tournaments/<%= tournament._id %>" class="btn btn-primary">View details</a>
            </div>
        </div>
        <% } %>